<!-- Validation failure messages -->
<% if @category.errors.any? %>
  <% @category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Category #<%= @category.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_category/<%= @category.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for clue -->
      <div class="form-group">
        <label for="clue" class="control-label">
          Clue
        </label>

        <input type="text" id="clue" name="clue" placeholder="Clue" class="form-control" value="<%= @category.clue %>">
      </div>

      <!-- Label and input for theme -->
      <div class="form-group">
        <label for="theme" class="control-label">
          Theme
        </label>

        <input type="text" id="theme" name="theme" placeholder="Theme" class="form-control" value="<%= @category.theme %>">
      </div>

      <!-- Label and input for round_id -->
      <div class="form-group">
        <label for="round_id" class="control-label">
          Round
        </label>

        <input type="text" id="round_id" name="round_id" placeholder="Round" class="form-control" value="<%= @category.round_id %>">
      </div>

      <button class="btn btn-warning">
        Update Category
      </button>
      or
      <a href="/categories/<%= @category.id %>">Cancel</a>
    </form>
  </div>
</div>
