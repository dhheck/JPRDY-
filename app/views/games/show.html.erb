  <div class="page-header">
    <div class="row">
      <div class="col-md-8">
        <h3>Game on <%= @game.date %> (<%= @game.game_type %>)</h3>
      </div>
      <div class="col-md-4">
        Total: <%= number_to_currency(@game.score, :precision => 0) %>
      </div>
    </div>

    <% @game.rounds.each do |round| %>
    <div class="container">
      <div class="col-md-12">
        <%= round.category %>! Round
      </div>
      <div class="row">
        <% round.categories.each do |category| %>
        <div class="col-md-2">
          <h4><%= category.name %>
            <div class="form-group">
              <input type="name" class="form-control" id="Catname" placeholder="Category Name?">
            </div></h4>

            <h4><%= category.theme %>
              <div class="form-group">
                <% if category.theme == nil %>
                <div class="dropdown">
                  <button class="btn btn-default btn-block dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Category Theme
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li><a href="/update_category/<%= category.id %>?theme=artsculture">Arts & Culture</a></li>
                    <li><a href="/update_category/<%= category.id %>?theme=entertainment">Entertainment</a></li>
                    <li><a href="/update_category/<%= category.id %>">Geography</a></li>
                    <li><a href="/update_category/<%= category.id %>">History</a></li>
                    <li><a href="/update_category/<%= category.id %>">Literature</a></li>
                    <li><a href="/update_category/<%= category.id %>">Science</a></li>
                    <li><a href="/update_category/<%= category.id %>">Sports</a></li>
                    <li><a href="/update_category/<%= category.id %>">Word Games</a></li>
                    <li><a href="/update_category/<%= category.id %>">Miscellaneous</a></li>
                  </ul>
                </div>

                <% else %>
                  <p><%= category.theme %></p>
                <% end %>

              </div>
            </h4>

            <% category.clues.each do |clue| %>
            <div class="panel">
              <div class="panel-body">

                <p><%= number_to_currency(clue.value, :precision => 0) %></p>

                <div class="btn-group btn-group-justified">
                  <% if clue.right == true %>
                  <a class="btn btn-success btn-sm" href="/update_clue/<%= clue.id %>?right=true&wrong=false&no_resp=false">
                    <i class="fa fa-check"></i>
                  </a>

                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=false&wrong=false&no_resp=true">
                    --
                  </a>

                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=false&wrong=true&no_resp=false">
                    <i class="fa fa-times"></i>
                  </a>

                  <% elsif clue.no_resp == true %>
                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=true&wrong=false&no_resp=false">
                    <i class="fa fa-check"></i>
                  </a>

                  <a class="btn btn-warning btn-sm" href="/update_clue/<%= clue.id %>?right=false&wrong=false&no_resp=true">
                    --
                  </a>

                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=false&wrong=true&no_resp=false">
                    <i class="fa fa-times"></i>
                  </a>

                  <% elsif clue.wrong == true %>
                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=true&wrong=false&no_resp=false">
                    <i class="fa fa-check"></i>
                  </a>

                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=false&wrong=false&no_resp=true">
                    --
                  </a>

                  <a class="btn btn-danger btn-sm"  href="/update_clue/<%= clue.id %>?right=false&wrong=true&no_resp=false">
                    <i class="fa fa-times"></i>
                  </a>

                  <% else %>
                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=true&wrong=false&no_resp=false">
                    <i class="fa fa-check"></i>
                  </a>

                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=false&wrong=false&no_resp=true">
                    --
                  </a>

                  <a class="btn btn-default btn-sm"  href="/update_clue/<%= clue.id %>?right=false&wrong=true&no_resp=false">
                    <i class="fa fa-times"></i>
                  </a>

                  <% end %>

                </div>
              </div>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
      <% end %>

      <div class="row">
        <div class="col-md-12">

          <div class="btn-group btn-group-justified">
            <a href="/games" class="btn btn-primary">
              Back
            </a>
            <a href="/games/<%= @game.id %>/edit" class="btn btn-warning">
              Edit
            </a>
            <a href="/delete_game/<%= @game.id %>" class="btn btn-danger" rel="nofollow">
              Delete
            </a>
          </div>
        </div>
      </div>
    </div>
